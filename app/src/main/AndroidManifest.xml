<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.balladares.microtareas">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Menu"
            android:label="@string/activityLabelMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Microtask1"
            android:label="@string/activityLabelMicrotask1"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".Microtask2a"
            android:label="@string/activityLabelMicrotask2a"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".Microtask2b"
            android:label="@string/activityLabelMicrotask2b"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".Microtask2c"
            android:label="@string/activityLabelMicrotask2c"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".Microtask3"
            android:label="@string/activityLabelMicrotask3"
            android:parentActivityName=".Menu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.balladares.microtareas.Menu" />
        </activity>
    </application>

</manifest>